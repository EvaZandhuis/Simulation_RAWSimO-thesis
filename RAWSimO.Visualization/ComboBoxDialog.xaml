<Window x:Class="RAWSimO.Visualization.ComboBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAWSimO.Visualization"
        mc:Ignorable="d"
        Title="ComboBoxDialog" SizeToContent="Height" Width="300" ResizeMode="NoResize">
    <StackPanel Margin="6">
        <TextBlock Text="Choose one of the options below:" Margin="2" />
        <ComboBox x:Name="ComboBoxChoices" Margin="2" />
        <Button x:Name="ButtonOK" Content="OK" Click="ButtonOK_Click" Margin="2" />
    </StackPanel>
</Window>
